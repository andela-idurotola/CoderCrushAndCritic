.playground(layout="row"  layout-fill)
  md-content(flex="100" layout="row" layout-fill)
    include side-nav
    .playground-view(flex="85" layout="column")
      md-toolbar.md-white(flex="100")
      #myElementContainer.grid(layout="row" flex="100")
        .grid-item(class="masonryImage" ng-repeat="card in nominations" flex="20")
          .card-container
            img(ng-src='{{card.image}}')
            .details-view
              .hashtag {{card.hashTag}}
              .nominee {{card.nominee}}
              .description {{card.description | limitTo : 70}}{{ card.description.length > 70 ? '...': ''}}
              .nominator By {{card.nominator}}
            ul.nomination-tools(layout="row" layout-align="space-between")
              li.likes
                i.mdi.mdi-heart  27 
              li.comments
                i.mdi.mdi-comment  14
              li.view-post 
                i.mdi.mdi-open-in-new  View

